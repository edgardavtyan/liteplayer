<resources>
    <style name="Theme.MusicPlayer" parent="Theme.AppCompat.DayNight">
        <item name="android:statusBarColor">@color/primaryBackground</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowLightNavigationBar">true</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:navigationBarColor">@color/primary</item>
        <item name="android:navigationBarDividerColor">@android:color/transparent</item>
    </style>

    <style name="Theme.MusicPlayer.NowPlaying">
        <item name="android:navigationBarColor">@color/primaryBackground</item>
    </style>
</resources>